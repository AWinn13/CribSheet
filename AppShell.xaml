<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="CribSheet.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:CribSheet"
       xmlns:views="clr-namespace:CribSheet.Views"
       Shell.FlyoutBehavior="Disabled"
       Title="Crib Sheet">
  <!--<Shell.TitleView>
    <TitleBar IsEnabled="True"
              IsVisible="True"
              ForegroundColor="Transparent" >
      <TitleBar.Content>
        <Image Source="titleicon.png"
               Aspect="Fill"
               MinimumHeightRequest="145"
               MinimumWidthRequest="345"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
