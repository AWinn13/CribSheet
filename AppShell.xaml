  <TabBar>
    <Tab Icon="home.png"
         Title="Home"
         IsVisible="True"
         IsEnabled="True">
      <ShellContent Title="Home"
                    ContentTemplate="{DataTemplate views:HomePage}"
                    Route="HomePage" />
    </Tab>
    <Tab Icon="edit.png"
         Title="Edit Baby">
      <ShellContent Title="Edit Baby"
                    ContentTemplate="{DataTemplate views:EditBabyPage}"
                    Route="EditBaby" />
    </Tab>
    <Tab Icon="add.png"
         Title="Add A Baby">
      <ShellContent Title="Add a Baby"
                    ContentTemplate="{DataTemplate views:AddBabyPage}"
                    Route="AddBabyPage" />
    </Tab>
    <Tab Title="Records"
         Icon="child.png">
      <ShellContent Title="Baby's Records"
                    ContentTemplate="{DataTemplate views:CurrentBabyPage}"
                    Route="CurrentBabyPage" />
      <ShellContent Title="Feeding Records"
                    ContentTemplate="{DataTemplate views:FeedingRecordsPage}"
                    Route="FeedingRecords" />
      <ShellContent Title="Sleep Records"
                    ContentTemplate="{DataTemplate views:SleepRecordsPage}"
                    Route="SleepingingRecords" />
      <ShellContent Title="Potty Records"
                    ContentTemplate="{DataTemplate views:PottyRecordsPage}"
                    Route="PottyRecordsPage" />
      <ShellContent Title="Weight Records"
                    ContentTemplate="{DataTemplate views:WeightRecordsPage}"
                    Route="WeightRecords" />
    </Tab>
  </TabBar>
</Shell>
