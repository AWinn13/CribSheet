<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CribSheet.Views.CurrentBabyPage"
             xmlns:viewModels="clr-namespace:CribSheet.ViewModels"
             xmlns:models="clr-namespace:CribSheet.Models"
             Title="CurrentBabyPage"
             x:Name="currentBabyPage"
             x:DataType="viewModels:CurrentBabyViewModel">
  <VerticalStackLayout>
    <HorizontalStackLayout HorizontalOptions="Center"
                           Spacing="20"
                           Margin="0,20,0,10">
      <Label Text="{Binding Name}"
             FontSize="Large"
             FontAttributes="Bold"
             VerticalOptions="Center" />
      <ImageButton Source="edit.png"
                   Command="{Binding EditBabyCommand}"
                   WidthRequest="30"
                   HeightRequest="30"
                   VerticalOptions="Center"
                   BackgroundColor="Transparent" />
    </HorizontalStackLayout>
    <VerticalStackLayout HorizontalOptions="Center"
                           Spacing="20"
                           Margin="0,20,0,10">
      <Label Text="{Binding AgeInMonths, StringFormat='Age: {0} Months'}"
             FontSize="Medium"
             VerticalOptions="Center" />
      <Label Text="{Binding Weight, StringFormat='Weight: {0} lbs'}"
             FontSize="Medium"
             VerticalOptions="Center"/>
      <Button Text="Edit Baby Info"
              WidthRequest="200"
              Command="{Binding EditBabyCommand}" />
    </VerticalStackLayout>
    <Grid ColumnDefinitions="*,*,*"
          RowDefinitions="*, *"
          ColumnSpacing="5">
      <Button Text="Feeding Records"
              ImageSource="pediatrics.png"
              ContentLayout="Bottom"
              FontAutoScalingEnabled="True"
              LineBreakMode="WordWrap"
              HorizontalOptions="Center"
              FontSize="Micro"
              Grid.Column="0"
              Grid.Row="0"
              Command="{Binding NavigateToFeedingsCommand}"
              Margin="10"
              WidthRequest="150"
              HeightRequest="100" />
      <Button Text="Add Feeding Record"
              ImageSource="pediatrics.png"
              ContentLayout="Bottom"
              FontAutoScalingEnabled="True"
              LineBreakMode="WordWrap"
              HorizontalOptions="Center"
              FontSize="Micro"
              Grid.Column="0"
              Grid.Row="1"
              Command="{Binding NavigateToNewFeedingCommand}"
              Margin="10"
              WidthRequest="150"
              HeightRequest="100" />
      <Button Text="Diaper Records"
              ImageSource="baby_changing_station.png"
              ContentLayout="Bottom"
              FontAutoScalingEnabled="True"
              LineBreakMode="WordWrap"
              HorizontalOptions="Center"
              FontSize="Micro"
              Grid.Column="1"
              Grid.Row="0"
              Command="{Binding NavigateToPottyCommand}"
              Margin="10"
              WidthRequest="150"
              HeightRequest="100" />
      <Button Text="Add Diaper Record"
              ImageSource="baby_changing_station.png"
              ContentLayout="Bottom"
              FontAutoScalingEnabled="True"
              LineBreakMode="WordWrap"
              HorizontalOptions="Center"
              FontSize="Micro"
              Grid.Column="1"
              Grid.Row="1"
              Command="{Binding NavigateToNewPottyCommand}"
              Margin="10"
              WidthRequest="150"
              HeightRequest="100" />
      <Button Text="Sleep Records"
              ImageSource="crib.png"
              ContentLayout="Bottom"
              FontAutoScalingEnabled="True"
              LineBreakMode="WordWrap"
              HorizontalOptions="Center"
              FontSize="Micro"
              Grid.Column="2"
              Grid.Row="0"
              Command="{Binding NavigateToSleepCommand}"
              Margin="10"
              WidthRequest="150"
              HeightRequest="100" />
      <Button Text="Add Sleep Record"
              ImageSource="crib.png"
              ContentLayout="Bottom"
              FontAutoScalingEnabled="True"
              LineBreakMode="WordWrap"
              HorizontalOptions="Center"
              FontSize="Micro"
              Grid.Column="2"
              Grid.Row="1"
              Command="{Binding NavigateToNewSleepCommand}"
              Margin="10"
              WidthRequest="150"
              HeightRequest="100" />
    </Grid>
  </VerticalStackLayout>
</ContentPage>